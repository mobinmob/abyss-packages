# Template file for 'cudatext'
pkgname=cudatext
version=1.172.0.1
revision=1
archs="x86_64"
create_wrksrc=yes
short_desc="Cross-platform text editor, written in Object Pascal"
maintainer="mobinmob <mobinmob@disroot.org>"
license="MPL-2.0"
homepage="https://cudatext.github.io/"
changelog="https://raw.githubusercontent.com/Alexey-T/CudaText/master/app/readme/history.txt"
distfiles="https://sourceforge.net/projects/cudatext/files/release/${version}/cudatext_${version}-1_qt5_amd64.deb"
checksum=a2fd74b309d0bad1a6f4014ff892676a7c9699e998d1de28ece7689898b20dfe
nopie=yes
python_version=3

do_extract() {
	ar p "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${pkgname}_${version}-1_qt5_amd64.deb" \
 data.tar.xz | bsdtar -x -f -
}

do_install() {
	vmkdir usr
	vcopy ${wrksrc}/usr/* usr
}
